{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components": [
        "components/index"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/atoms/*": [
        "atoms/*"
      ],
      "@/data/*": [
        "data/*"
      ],
      "@/api/*": [
        "pages/api/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "node_modules/@phobon/base/**/*.d.ts",
    "node_modules/@phobon/grimoire/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
